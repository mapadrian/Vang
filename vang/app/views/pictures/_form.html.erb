<%= simple_form_for @picture, html: {multipart: true} do |f| %>
  <%= f.error_notification %>
  <div class="columns is-centered">
    <div class="column is-half">
      <% unless @picture.user_picture.blank? %>
      	<%= image_tag (@picture.user_picture_url), id: "previewImage" %>
      <% end %>
      <output id="list"></output>
      <div id="drop_zone">Drag your photo here</div>
      <br/>
      <%= f.input :user_picture, label: false, input_html: {class: "file-input", type: "file"}, wrapper:false, label_html: {class: "file-label"} %>
      <div class="field">
        <div class="control">
          <%= f.input :title, label:"Title", input_html: {class:"input"}, wrapper: false, label_html: {class: "label"} %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.input :description, input_html: {class:"textarea"}, wrapper: false, label_html: {class: "label"} %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.button :submit, "Upload Photo", class: "button is-primary" %>
        </div>
      </div>

    </div>
  </div>
<% end %>
